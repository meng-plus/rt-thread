menu "Hardware Drivers Config"

    menu "On-chip Peripheral Drivers"
        config BSP_USING_HWTIMER0
            bool "Using timer0"
            select RT_USING_HWTIMER
            default n
        config BSP_USING_EEPROM_ONCHIP
            bool "Enable On-chip EEPROM"
            default n
            config BSP_USING_FAL_SAMPLE
                bool "Enable FAL for test"
                default n
        config BSP_USING_FLASH_ONCHIP
            bool "Enable On-chip Flash"
            default n
        config BSP_USING_ADC
            bool "Using ADC"
            select RT_USING_ADC
            default n
        menu "SPI config"
            config BSP_USING_SPI
            bool "Enable SPI"
            select RT_USING_SPI
            default n
            if BSP_USING_SPI
                config BSP_USING_SPI1
                bool "Enable SPI1"
                default n
                config BSP_USING_SPI2
                bool "Enable SPI2"
                default n
            endif
            config BSP_USING_SOFT_SPI
            bool "Enable SOFT SPI"
            select RT_USING_SPI
            select RT_USING_SPI_BITOPS
            select RT_USING_PIN
            default n
            if BSP_USING_SOFT_SPI
                config BSP_USING_SOFT_SPI1
                bool "Enable sspi1"
                default n
                if BSP_USING_SOFT_SPI1
                    config BSP_S_SPI1_SCK_PIN
                    int "Select sck"
                    default 86
                    config BSP_S_SPI1_MOSI_PIN
                    int "Select mosi"
                    default 91
                    config BSP_S_SPI1_MISO_PIN
                    int "Select miso"
                    default 90
                endif

                config BSP_USING_SOFT_SPI2
                bool "Enable sspi2"
                default n
                if BSP_USING_SOFT_SPI2
                    config BSP_S_SPI2_SCK_PIN
                    int "Select sck"
                    default 7
                    config BSP_S_SPI2_MOSI_PIN
                    int "Select mosi"
                    default 9
                    config BSP_S_SPI2_MISO_PIN
                    int "Select miso"
                    default 8
                endif
                config BSP_USING_SOFT_SPI3
                bool "Enable sspi3"
                default n
                if BSP_USING_SOFT_SPI3
                    config BSP_S_SPI3_SCK_PIN
                    int "Select sck"
                    default 46
                    config BSP_S_SPI3_MOSI_PIN
                    int "Select mosi"
                    default 156
                    config BSP_S_SPI3_MISO_PIN
                    int "Select miso"
                    default 40
                endif
            endif
        endmenu
        config BSP_USING_UART
            bool "Enable UART"
            select RT_USING_SERIAL
            default n
            if BSP_USING_UART
                config BSP_USING_UART0
                    bool "Enable UART0"
                    default y
                config BSP_USING_UART1
                    bool "Enable UART1"
                    default n
                config BSP_USING_UART2
                    bool "Enable UART2"
                    default n
                config BSP_USING_UART3
                    bool "Enable UART3"
                    default n
                config BSP_USING_UART4
                    bool "Enable UART4"
                    default n
           endif
    endmenu

    menu "On Core Board Peripheral Drivers"

        config BSP_USING_SDRAM
            bool "Enable SDRAM"
            default y
        config BSP_USING_EXTFLASH
            bool "Enable extflash"
            default y

        config BSP_USING_SPFI
            bool "Enable QSPI S25FL032"
            select RT_USING_FAL
            depends on BSP_USING_EXTFLASH
            default n

        config BSP_USING_FM31XX
            bool "Enable Fm31xx(wdg e2prom RTC)"
            select RT_USING_RTC
            default n
            if BSP_USING_FM31XX
            config BSP_USING_FM31XX_SHELL
                bool "Enabel shell"
                default n

            config BSP_USING_WDT
                bool "Enabel watchdog"
                select RT_USING_WDT
                default n
            endif

        config BSP_USING_ADXL345
            bool "Enable ADXL345"
            default n
            config BSP_USING_ADXL345_SHELL
            bool "Enabel shell"
                depends on BSP_USING_ADXL345
            default n
    endmenu

menu "Board extended module Drivers"
    choice
        prompt "Board select"
        default BSP_USING_BOARD_9903Z1V2

        config BSP_USING_BOARD_9903Z1V2
        bool "9903Z1V2"
        config BSP_USING_BOARD_315101Z2V2
        bool "315101Z2V2"
        config BSP_USING_BOARD_370792Z1V1_20230828
        bool "370792Z1V1(20230828)"
    endchoice

    choice
        prompt "Flash database select"
        default BSP_USING_FLASHDB

        config BSP_USING_EASYFLASH
        bool "easyFlash"
        config BSP_USING_FLASHDB
        bool "flash db"
    endchoice

        if BSP_USING_EASYFLASH
            config BSP_USING_EASYFLASH
                select PKG_USING_EASYFLASH
                select RT_USING_FAL
         endif
        if BSP_USING_FLASHDB
            config BSP_USING_FLASHDB
                select PKG_USING_FLASHDB
                select RT_USING_FAL
        endif
        config BSP_USRING_FAL_NAME
            string "Fal part name"
            depends on  BSP_USING_EASYFLASH || BSP_USING_FLASHDB
            default "easyflash"


        config BSP_USING_ADS1115
        bool "Enable ADS1115"
            depends on BSP_USING_BOARD_9903Z1V2 || BSP_USING_BOARD_315101Z2V2
        default n
        config BSP_USING_ADS1115_SHELL
        bool "Enabel shell"
            depends on BSP_USING_ADS1115
        default n

        config BSP_USING_LCD
            bool "Enable LCD"
            depends on BSP_USING_BOARD_9903Z1V2 || BSP_USING_BOARD_315101Z2V2 ||BSP_USING_BOARD_370792Z1V1_20230828
            default n
            if BSP_USING_LCD
                config BSP_LCD_WIDTH
                    int "screen width"
                    default 480
                config BSP_LCD_HEIGHT
                    int "screen height"
                    default 272
                config BSP_LCD_BPP
                int "color depth"
                default 16
            endif
        config BSP_USING_KEYIRD
            bool "Enable KeyIrd"
            depends on BSP_USING_BOARD_9903Z1V2 || BSP_USING_BOARD_315101Z2V2 ||BSP_USING_BOARD_370792Z1V1_20230828
            default n
endmenu
menu "Board extended packages"
        config PKG_USING_PROTOCOL
            bool "Enable Protocol framework"
            default n
           help
                user protocol
endmenu
endmenu
