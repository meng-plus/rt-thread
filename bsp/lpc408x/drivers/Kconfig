menu "Hardware Drivers Config"

    menu "On-chip Peripheral Drivers"
        config BSP_USING_EMAC
            bool "EMAC driver"
            select RT_USING_LWIP
            default n

        config BSP_USING_HWTIMER0
            bool "Using timer0"
            select RT_USING_HWTIMER
            default n

        config BSP_USING_ADC
            bool "Using ADC"
            select RT_USING_ADC
            default n
        config BSP_USING_I2C
            bool "Using I2C"
            select RT_USING_I2C
            default n
            if BSP_USING_I2C
            config BSP_USING_I2C0
                bool "Using I2C0"
                select RT_USING_I2C_BITOPS
                default n
                config BSP_USING_I2C1
                bool "Using I2C1"
                select RT_USING_I2C_BITOPS
                default n
            endif

        menu "UART Drivers"
            config BSP_USING_UART0
                bool "Enable UART0"
                select RT_USING_SERIAL
                default y

            config BSP_USING_UART1
                bool "Enable UART1"
                select RT_USING_SERIAL
                default n

            config BSP_USING_UART2
                bool "Enable UART2"
                select RT_USING_SERIAL
                default n

            config BSP_USING_UART3
                bool "Enable UART3"
                select RT_USING_SERIAL
                default n

            config BSP_USING_UART4
                bool "Enable UART4"
                select RT_USING_SERIAL
                default n
        endmenu

    endmenu

    menu "Onboard Peripheral Drivers"

        config BSP_USING_SDRAM
            bool "Enable sdram"
            default n

        config BSP_USING_LED
            bool "Enable LED"
            default n
    endmenu

menu "Board extended module Drivers"
    choice
        prompt "Board select "
        default BSP_USING_BOARD_9903Z1V2

        config BSP_USING_BOARD_9903Z1V2
        bool "9903Z1V2"
        config BSP_USING_BOARD_315101Z2V2
        bool "315101Z2V2"
    endchoice
endmenu

endmenu
